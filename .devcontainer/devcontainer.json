{
  "name": "growsp-dev-container",
  "image": "yarinpour/growsp_nvidia",
  "runArgs": [
    "--gpus", "all"
  ],
  "workspaceFolder": "/workspace",
  "mounts": [
    "source=${localWorkspaceFolder},target=/workspace,type=bind"
  ],
  "postStartCommand": "source ~/.bashrc && conda activate growsp"
}
